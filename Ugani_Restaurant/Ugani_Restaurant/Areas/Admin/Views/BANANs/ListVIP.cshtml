
@model PagedList.IPagedList<Ugani_Restaurant.Models.BANAN>
@using PagedList.Mvc
@{
    ViewBag.Title = "Danh sách bàn ăn VIP";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/AdminStyle/main.css" />

<h3>Danh sách bàn ăn</h3>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-danger" })
</p>
<table class="table">
    <tr>
        <th>
            MÃ BÀN
        </th>
        <th>
            LOẠI BÀN
        </th>
        <th>
            SỐ GHẾ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MABAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LOAIBAN.TENLOAIBAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SOGHE)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MABAN.Trim() }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MABAN.Trim() }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
@*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount*@
@Html.PagedListPager(Model, page => Url.Action("ListVIP", new { page }))


