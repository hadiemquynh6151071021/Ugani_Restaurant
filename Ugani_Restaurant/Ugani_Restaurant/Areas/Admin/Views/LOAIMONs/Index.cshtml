@model IEnumerable<Ugani_Restaurant.Models.LOAIMON>

@{
    ViewBag.Title = "Danh sách loại món";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách loại món</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-danger" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TENLOAIMON)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TENLOAIMON)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MALOAIMON }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MALOAIMON }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
