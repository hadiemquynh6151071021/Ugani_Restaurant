@model Ugani_Restaurant.Models.LOAIMON

@{
    ViewBag.Title = "Chỉnh sửa loại món";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


  <h3>Chỉnh sửa</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Loại món</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MALOAIMON)

        <div class="form-group">
            @Html.LabelFor(model => model.TENLOAIMON, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENLOAIMON, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENLOAIMON, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary btn-center" />
            </div>
        </div>
    </div>
}

